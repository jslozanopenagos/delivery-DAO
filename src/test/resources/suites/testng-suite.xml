<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="delivery-dao-suite" verbose="1" parallel="false">
    <parameter name="dbUrl" value="jdbc:mysql://localhost:3306/delivery_db_test"/>
    <parameter name="dbUser" value="test_user"/>
    <parameter name="dbPass" value="test_pass"/>

    <test name="unit-services">
        <classes>
            <class name="com.solvd.delivery.ServiceInitializationTest"/>
            <class name="com.solvd.delivery.ModelPojoTest"/>
            <class name="com.solvd.delivery.EnumCoverageTest"/>
            <class name="com.solvd.delivery.TimestampAdapterTest"/>
            <class name="com.solvd.delivery.SaxParsersSmokeTest"/>
        </classes>
    </test>

    <test name="dao-contracts">
        <classes>
            <class name="com.solvd.delivery.DaoFactoryTest"/>
            <class name="com.solvd.delivery.UserDaoInterfaceContractTest"/>
        </classes>
    </test>

    <test name="mybatis-config">
        <classes>
            <class name="com.solvd.delivery.MyBatisConfigTest"/>
            <class name="com.solvd.delivery.UserMyBatisMapperPresenceTest"/>
        </classes>
    </test>

    <test name="parameterized">
        <classes>
            <class name="com.solvd.delivery.DataProviderDrivenTest"/>
        </classes>
    </test>
</suite>
